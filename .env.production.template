# ==============================================
# EYTGaming - Production Environment Variables
# ==============================================
# Copy this file to .env on your server and fill in the values
# NEVER commit the actual .env file to version control!

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================

# Generate a new secret key for production using:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# ALWAYS set to False in production
DEBUG=False

# Add your domain(s) separated by commas
# For PythonAnywhere: yourusername.pythonanywhere.com
# For custom domain: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=yourusername.pythonanywhere.com

# ==============================================
# DATABASE CONFIGURATION (MySQL for PythonAnywhere)
# ==============================================

DB_USER=yourusername
DB_PASSWORD=your_mysql_password_here
DB_HOST=yourusername.mysql.pythonanywhere-services.com
DB_NAME=yourusername$eytgaming
DB_PORT=3306

# Alternative: PostgreSQL (for other hosts)
# DB_USER=postgres_user
# DB_PASSWORD=postgres_password
# DB_HOST=your-postgres-host.com
# DB_NAME=eytgaming_db
# DB_PORT=5432

# ==============================================
# SITE CONFIGURATION
# ==============================================

SITE_URL=https://yourusername.pythonanywhere.com
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@eytgaming.com
SERVER_EMAIL=server@eytgaming.com

# ==============================================
# SECURITY SETTINGS
# ==============================================

# Add your domain to CSRF trusted origins
CSRF_TRUSTED_ORIGINS=https://yourusername.pythonanywhere.com

# ==============================================
# PAYMENT GATEWAYS (Optional)
# ==============================================

# Stripe
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Paystack
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

# ==============================================
# SOCIAL AUTHENTICATION (Optional)
# ==============================================

# Discord
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Steam
STEAM_API_KEY=

# ==============================================
# SOCIAL MEDIA LINKS
# ==============================================

DISCORD_URL=https://discord.gg/eytgaming
TWITTER_URL=https://twitter.com/eytgaming
TWITCH_URL=https://twitch.tv/eytgaming
YOUTUBE_URL=https://youtube.com/@eytgaming

# ==============================================
# CELERY & REDIS (Requires paid PythonAnywhere plan)
# ==============================================

# Leave commented out on free tier
# CELERY_BROKER_URL=redis://localhost:6379/1
# REDIS_URL=redis://localhost:6379/0

# ==============================================
# RATE LIMITING
# ==============================================

# Disable on free tier (requires Redis)
RATE_LIMIT_ENABLED=False
RATELIMIT_ENABLE=False
STORE_RATE_LIMIT_ENABLED=False

# ==============================================
# SENTRY ERROR TRACKING (Optional)
# ==============================================

# Add your Sentry DSN if using error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ==============================================
# CORS SETTINGS (Optional)
# ==============================================

# If you have a separate frontend, add its URL here
# CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com

# ==============================================
# NPM PATH (if using Tailwind compilation)
# ==============================================

# Usually not needed on PythonAnywhere if using CDN Tailwind
# NPM_BIN_PATH=/usr/local/bin/npm
