# ==============================================
# PythonAnywhere FREE TIER Configuration
# ==============================================
# This configuration disables features that don't work on free tier

# Django Core
SECRET_KEY=your-actual-secret-key-here
DEBUG=False
ALLOWED_HOSTS=eytgaming.pythonanywhere.com

# Database (MySQL on PythonAnywhere)
DB_USER=eytgaming
DB_PASSWORD=your_mysql_password
DB_HOST=eytgaming.mysql.pythonanywhere-services.com
DB_NAME=eytgaming$default
DB_PORT=3306

# Site Config
SITE_URL=https://eytgaming.pythonanywhere.com
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# ==============================================
# CRITICAL: EMAIL CONFIGURATION FOR FREE TIER
# ==============================================
# Use console backend to DISABLE email sending
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# OR if you have SMTP credentials, use them:
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# ==============================================
# SECURITY
# ==============================================
CSRF_TRUSTED_ORIGINS=https://eytgaming.pythonanywhere.com

# ==============================================
# DISABLE REDIS/CELERY (NOT AVAILABLE ON FREE TIER)
# ==============================================
# Leave these commented out - DO NOT SET
# CELERY_BROKER_URL=
# REDIS_URL=

# ==============================================
# DISABLE RATE LIMITING (REQUIRES REDIS)
# ==============================================
RATE_LIMIT_ENABLED=False
RATELIMIT_ENABLE=False
STORE_RATE_LIMIT_ENABLED=False

# ==============================================
# SOCIAL AUTH (Optional - leave blank if not configured)
# ==============================================
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
STEAM_API_KEY=

# ==============================================
# PAYMENT GATEWAYS (Optional)
# ==============================================
STRIPE_PUBLIC_KEY=
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_SECRET_KEY=
PAYSTACK_WEBHOOK_SECRET=

# ==============================================
# SOCIAL MEDIA
# ==============================================
DISCORD_URL=https://discord.gg/eytgaming
TWITTER_URL=https://twitter.com/eytgaming
TWITCH_URL=https://twitch.tv/eytgaming
YOUTUBE_URL=https://youtube.com/@eytgaming
